
#include <iostream>
using namespace std;

int main()
{
    int i,n,k,c=0;
    cin>>n;
    cin>>k;
    int arr[n];

    for(i = 0; i < n; i++){
        cin>>arr[i];
    }

    k = arr[k-1];

    for(i = 0; i < n; i++){
        if(arr[i]>=k && arr[i]!=0){
            c++;
        }
    }

    cout<<c;

    return 0;
}
